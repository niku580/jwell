<% include ./partials/header.ejs %>

<div class="w-full bg-center bg-cover bg-gray-200 flex items-center justify-center min-h-screen">
  <div class="bg-white w-full max-w-md p-6 rounded-2xl shadow-2xl mt-10 mb-10">

    <h2 class="text-2xl font-bold text-center text-[#090040] mb-6">Create New Account</h2>

    <form action="/register" method="POST" class="space-y-4">
      
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
        <input type="text" name="fullname" required placeholder="Enter your name" class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-1 focus:ring-[#948979]" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Username</label>
        <input type="text" name="username" required placeholder="Choose a username" class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-1 focus:ring-[#948979]" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input type="email" name="email" required placeholder="Enter your email" class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-1 focus:ring-[#948979]" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input type="password" name="password" required placeholder="Create a password" class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-1 focus:ring-[#948979]" />
      </div>

      <button type="register" class="w-full bg-[#090040] text-white py-2 rounded-3xl hover:bg-[#322b73] transition">
        Register
      </button>
      <div class="flex items-center justify-between">
        <a href="#">Forget password</a>
        <a href="/">Existing User</a>

      </div>
    </form>
  </div>
</div>

<% include ./partials/footer.ejs %>



