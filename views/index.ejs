<% include ./partials/header.ejs %>

<div class="w-full bg-center bg-cover bg-[url(https://images.unsplash.com/photo-1691669505981-f2caaca04454?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTh8fGpld2VsbGVyeSUyMGJyYW5kaW5nfGVufDB8fDB8fHww)] flex items-center justify-center min-h-screen">
  <div class="bg-white w-full max-w-md p-6 rounded-2xl shadow-2xl mt-10 mb-10">

    <h2 class="text-2xl font-bold text-center text-[#090040] mb-6">Login Here</h2>

    <form action="/login" method="POST" class="space-y-4">

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input type="email" name="email" required placeholder="Enter your email" class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-1 focus:ring-[#948979]" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input type="password" name="password" required placeholder="Create a password" class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-1 focus:ring-[#948979]" />
      </div>

      <button type="submit" class="w-full bg-[#090040] text-white py-2 rounded-3xl hover:bg-[#322b73] transition">
        Login
      </button>
      <div class="flex items-center justify-between">
        <a href="#">Forget password</a>
        <a href="/register">Create Account</a>

      </div>
    </form>
  </div>
</div>

<% include ./partials/footer.ejs %>



