<script>
  let slideIndex = 0;
  const totalSlides = 3;
  const slideshowContainer = document.getElementById("slideshows");

  function showSlides() {
    slideIndex = (slideIndex) % totalSlides;
    slideshowContainer.style.transform = `translateX(-${slideIndex * 100}vw)`;
  }

  setInterval(showSlides, 4000);
</script>
