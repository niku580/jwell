  <!-- OTP Login Modal -->
<div id="otpLoginModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
  <div class="bg-white w-full max-w-sm p-6 rounded-lg shadow-lg animate__animated animate__fadeInDown">
    <div class="text-right">
      <button onclick="closeOtpLoginModal()" class="text-xl text-gray-500 hover:text-red-600">&times;</button>
    </div>
    <h2 class="text-xl font-bold text-center text-[#090040] mb-4">Login with OTP</h2>

    <form onsubmit="verifyOtp(event)">
      <!-- Contact Input -->
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Contact Number</label>
        <input type="tel" id="phoneInput" required class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-[#948979]" placeholder="Enter your number">
      </div>

      <!-- OTP Input (hidden by default) -->
      <div class="mb-4 hidden" id="otpSection">
        <label class="block text-sm font-medium text-gray-700 mb-1">OTP</label>
        <input type="text" required id="otpInput" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-[#948979]" placeholder="Enter OTP">
      </div>

      <!-- Buttons -->
      <div class="text-center">
        <button type="button" id="sendOtpBtn" onclick="sendOtp()" class="bg-[#090040] text-white px-6 py-2 rounded-md hover:bg-[#322b73] transition mb-2">
          Send OTP
        </button>
        <button type="submit" id="verifyOtpBtn" class="bg-[#090040] text-white px-6 py-2 rounded-md hover:bg-[#322b73] transition hidden">
          Verify & Login
        </button>
      </div>
    </form>
  </div>
</div>


