<script>
  const imageList = [
    "/images/eBanner.jpg",
    "/images/eBanner2.jpg",
    "/images/sBanner.jpg",
    "/images/banner5.webp",
    "/images/img01.webp"
  ];

  let currentIndex = 0;
  const sliderImage = document.getElementById('sliderImage');

  setInterval(() => {
    // Fade out
    sliderImage.classList.add('opacity-0');

    // Wait for fade-out before changing image
    setTimeout(() => {
      currentIndex = (currentIndex + 1) % imageList.length;
      sliderImage.src = imageList[currentIndex];

      // Fade in
      sliderImage.classList.remove('opacity-0');
    }, 500); // match with tailwind `duration-1000` if needed
  }, 3000); // 4 seconds
</script>

