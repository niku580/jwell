 .shine-layer {
    position: relative;
    display: inline-block;
    background-image: linear-gradient(90deg, #0C0950 0%, gold 50%, #0C0950 100%);
    background-size: 200% auto;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: shineText 3s linear infinite;
  }

