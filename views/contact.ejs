<%- include('./partials/header') %>
 <div class="bg-gray-50 bg-[url('images/set1.jpg')] bg-cover bg-no-repeat bg-center min-h-screen">
  <section class="pt-32 pb-16 px-4 w-auto mx-auto">
      <h2 class="text-3xl font-bold text-center text-white mb-10 font-serif tracking-widest">
        Contact Us
      </h2>
      
     <section class=" pb-16 px-4 w-full mx-auto ">
  

 <div class="bg-white rounded-lg shadow-lg shadow-gray-700 flex flex-col md:flex-row overflow-hidden w-full">
  <!-- Left: Form -->
  <div class="md:w-1/2 p-6">
    <form action="/contact" method="POST" class="space-y-6 h-full flex flex-col justify-between">
      <div>
        <label class="block text-sm font-medium text-gray-700">Name</label>
        <input type="text" name="name" required class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#948979]" placeholder="Enter Your Name" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Email</label>
        <input type="email" name="email" required class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#948979]" placeholder="Enter Your Email" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700">Contact Number</label>
        <input type="text" name="subject" required class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#948979]" placeholder="Enter Your Contact No." />
      </div>
      <div class="flex-grow">
        <label class="block text-sm font-medium text-gray-700">Message</label>
        <textarea name="message" rows="5" required class="mt-1 w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-[#948979]" placeholder="Write Your Message Here"></textarea>
      </div>

      <!-- reCAPTCHA + Submit Button -->
      <div class=" mt-4 text-center">
        <!-- Button -->
        <button type="submit"
          class="bg-[#090040] hover:bg-[#948979] text-white font-medium px-6 py-2 rounded-full transition duration-300 animate-pulse hover:scale-105">
          Send Message
        </button>
      </div>
    </form>
  </div>

  <!-- Right: Image -->
  <div class="md:w-1/2">
    <img src="images/R2.jpg" alt="Contact Us Image" class="w-full h-full object-cover">
  </div>
</div>

</section>

</div>

<%- include('./partials/footer') %>